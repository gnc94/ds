#include <stdio.h>

int main() {
    int i, first, last, middle, search, n, array[100];
    
    // Input: Number of elements
    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Input: Array elements (sorted order is assumed)
    printf("Enter %d integers (in sorted order): ", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &array[i]);
    }
    
    // Input: Element to search
    printf("Enter value to find: ");
    scanf("%d", &search);

    first = 0;
    last = n - 1;

    // Binary search algorithm
    while(first <= last) {
        middle = (first + last) / 2;

        if(array[middle] < search) {
            first = middle + 1;
        } else if(array[middle] == search) {
            printf("%d found at location %d.\n", search, middle + 1); // 1-based index
            return 0; // Exit once the element is found
        } else {
            last = middle - 1;
        }
    }
    
    // If element is not found
    printf("Given element %d is not found.\n", search);
    return 0;
}
