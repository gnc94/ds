#include <stdio.h>
#include<malloc.h>

char arr[6];

void inputdata();
void printdata();

int main() 
{
    inputdata();
    printdata();
}

void inputdata() 
{
    int i;
    for (i = 0; i < = 5; i++) 
    {
        printf("Enter the %dth element: ", i);
        scanf(" %c", &arr[i]);
    }
}

void printdata() 
{
    int i;
    printf("Elements of the array: ");
    for (i = 0; i < = 5; i++) 
    {
        printf("%c ", arr[i]);
    }
    printf("\n");
}
